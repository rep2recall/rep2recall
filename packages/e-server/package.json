{
  "name": "rep2recall-local",
  "description": "Repeat until Recall, desktop version",
  "main": "lib/index.js",
  "bin": "lib/index.js",
  "pkg": {
    "scripts": "lib/**/*.js",
    "assets": "web/**/*"
  },
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "prebuild": "npm run build-schema",
    "build": "tsc -P src/tsconfig.json",
    "build:web": "cd ../e-web && npm run build -- --dest ../e-server/web",
    "predist": "npm run build && npm run build:web",
    "dist": "pkg . --out-path dist",
    "dist:mac": "npm run dist -- -t node12-macos-x64 -o dist/rep2recall-local-macos-x64",
    "postinstall": "node scripts/postinstall.js",
    "build-schema": "npx cross-env typescript-json-schema --noExtraProps --required -o src/schema/schema.json src/schema/schema.ts '*'"
  },
  "keywords": [
    "rep2recall",
    "anki"
  ],
  "repository": "github:patarapolw/rep2recall",
  "author": {
    "email": "patarapolw@gmail.com",
    "name": "Pacharapol Withayasakpunt",
    "url": "https://rep2recall.net"
  },
  "license": "ISC",
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.1",
    "adm-zip": "^0.4.14",
    "ajv": "^6.12.2",
    "any-serialize": "^1.4.12",
    "better-sqlite3": "^7.0.1",
    "dayjs": "^1.8.26",
    "death": "^1.1.0",
    "dot-prop-immutable": "^2.1.0",
    "escape-string-regexp": "^4.0.0",
    "fastify": "^2.14.1",
    "fastify-cors": "^3.0.3",
    "fastify-file-upload": "^2.0.1",
    "fastify-helmet": "^3.0.2",
    "fastify-oas": "^2.7.0",
    "fastify-static": "^2.7.0",
    "fastify-websocket": "^1.1.2",
    "nanoid": "^3.1.6",
    "observable-fns": "^0.5.1",
    "pino": "^6.2.1",
    "pino-pretty": "^4.0.0",
    "rimraf": "^3.0.2",
    "threads": "^1.4.1",
    "zod": "^1.6.1"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.4.33",
    "@types/better-sqlite3": "^5.4.0",
    "@types/express-fileupload": "^1.1.3",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^13.13.5",
    "@types/pino": "^6.0.1",
    "@types/rimraf": "^3.0.0",
    "@types/ws": "^7.2.4",
    "cross-env": "^7.0.2",
    "pkg": "^4.4.8",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3",
    "typescript-json-schema": "^0.42.0"
  }
}
